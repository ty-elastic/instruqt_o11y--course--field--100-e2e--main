#!/bin/bash
#set -euxo pipefail
set +x

echo "Running track setup script on host es3-api-v1"

# Wait for the Instruqt host bootstrap to finish
until [ -f /opt/instruqt/bootstrap/host-bootstrap-completed ]
do
    sleep 1
done

# ----------------------------------------- CLONE CODE

export COURSE=o11y--course--field--100-e2e
export GITHUB_REPO=https://github.com/ty-elastic/instruqt_$COURSE--main

mkdir -p /workspace/workshop
git clone $GITHUB_REPO /workspace/workshop
cd /workspace/workshop

# ----------------------------------------- SETUP SERVERLESS

source /workspace/workshop/instruqt/scripts/serverless/create.sh

# ----------------------------------------- APPS

source /workspace/workshop/instruqt/scripts/vars.sh -w true

cd /workspace/workshop
./build.sh -o false -c $COURSE -d false -b false -s none -j $ELASTICSEARCH_URL -h $KIBANA_URL -i $ELASTICSEARCH_APIKEY -k $INGEST_URL:443 -f true -e http://$HOSTNAME.$_SANDBOX_ID.instruqt.io:43210
